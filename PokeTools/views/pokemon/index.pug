extends _pokemonlayout

block append styles
  style(type='text/css').
    #tools{
      background: linear-gradient(rgba(255,255,255, 0.6), transparent);
    }
block append content
  .jumbotron
    h1 Welcome to Pok&#0232;Tools!
    p The Pok&#0232;mon&trade; gameplay utility site.
    p.alert.alert-info Choose from the tools below or click a Pokemon to the right to view its details.
  ul.tiles#tools
    li
      a(href='/pokemon/compare/stats')
        picture
          source(srcset='/Pokemon/images/ComparisonChart.webp', type='image/webp')
          source(srcset='/Pokemon/images/ComparisonChart.png', type='image/png')
          img(src='/Pokemon/images/ComparisonChart.png', alt='Compare Stats').img-fluid
        span Base Stats Comparison
    li
      a(href='/pokemon')
        picture
          source(srcset='/images/compiling.webp', type='image/webp')
          source(srcset='/images/compiling.png', type='image/png')
          img(src='/images/compiling.png', alt='Coming Soon').img-fluid
        span More Coming Soon

block append scripts
  script(type='text/javascript').
    $(document).ready(function(){
      $("#searchResults").on("pokemon.clicked", function(e, result){
        console.log("\t[index] Pokemon Clicked: ", result);
        window.location = "/pokemon/" + result.getAttribute("data-name");
      });
    });