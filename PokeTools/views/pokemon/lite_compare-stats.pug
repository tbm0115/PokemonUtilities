      $(document).ready(function(){
        var pids = atob("!{data}").replace(/\"/g, "").split(",");
        for(var len = pids.length,n=0;n<len;n++){
          ComparePokemon.push(new Pokemon(pids[n],{
              includes: {
                species: {
                  includes: {
                    evolution_chain: {}
                  }
                }
              },
              callback: function () {
                BuildComparison();
              }
            }));
        }
      });